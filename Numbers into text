import inflect
p=inflect.engine()
try:
    a=input("Enter a number")
    if"." in a:
        a=float(a)
    else:
        a=int(a)
        c=p.number_to_words(a)
        print(a,"in words",c)
except ValueError:
        print("Invalid input")
        
        
